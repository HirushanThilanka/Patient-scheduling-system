    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/adminStyle.css">
    <script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Diabetic Clinic</a>
          <a class="navbar-brand">Admin Panel</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Dashboard</a></li>
            <li><a href="">Users</a></li>
            <li class="active"><a href="">Pharmacy</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="">Welcome,Kavinda</a></li>
            <li><a href="/">Logout</a></li>
            <li>
          </ul> 
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1><span class="glyphicon glyphicon-cog"></span> Dashboard</h1>
          </div>
          <div class="col-md-2">
            <div class="dropdown create">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Users
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <li><a href="#">Add User</a></li>
                  <li><a href="#">Remove User</a></li>
                </ul>
            </div>
          </div>
         
        </div>
      </div>
      
    </header>
    
    <section id="breadcrumb">
      <div class="container">
        <div class="row">
          <div class="col-md">
            <ol class="breadcrumb">
              <li>Dashboard</li>
              <li class="active">Pharmacy</li>

            </ol>
          </div>
          
        </div>
        
      </div>
    </section>

    <section id="main">
       <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="list-group">
              <a href="/admin/dashboard" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</a>
              <a href="/admin/users" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users</a>
              <a href="/admin/Pharmacy" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Pharmacy</a>
            </div>
          </div>

          <div class="col-md-9">
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">
                  Pharmacy
                </h3>
                
              </div>
              <div class="panel-body">
             
                <div class="col-md-8 col-md-offset-2">
                <form id="login" action="/admin/pharmacy/add" method="POST" class="well">
                <div class="form-group">
                  <label>Number</label>
                  <input type="text" name="number" id="number" class="form-control" placeholder="Enter number">
                </div>
                   <%if(numberAddError) {%>
              <div class="alert alert-danger">
                <h5>Enter number</h5>
                
              </div>
              <%}%>
                <div class="form-group">
                  <label>Medicine</label>
                  <input type="text" name="medicine" id="medicine" class="form-control" placeholder="Enter medicine">
                </div>
                   <%if(medicineAddError) {%>
              <div class="alert alert-danger">
                <h5>Enter medicine</h5>
                
              </div>
              <%}%>
                <center>
                  <input type="submit" class="btn btn-success" value="Add" id="login">
                </center>
                  
                
                
            </form>
              <form id="login" action="/admin/pharmacy/remove" method="POST" class="well">
                <div class="form-group">
                  <label>Number</label>
                  <input type="text" name="numberRemove" id="numberRemove" class="form-control" placeholder="Enter number">
                </div>
                   <%if(medicineRemoveError) {%>
              <div class="alert alert-danger">
                <h5>Enter number</h5>
                
              </div>
              <%}%>
                <center>
                  <input type="submit" class="btn btn-danger" value="Remove" id="login">
                </center>
                  
                
                
            </form>
            <table class="table table-striped table-hover">
              <tr>
                <th>Number</th>
                <th>Medicine</th>
              </tr>
              <%for(var medicine in rows){%>
              <tr>
                <td><%= rows[medicine].Number %></td>
                <td><%= rows[medicine].Tablet %></td>
              </tr>
              <%}%>
            </table>
          </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </section>
    
   
    <footer id="footer">
      <p>Copyright &copy</p>
      
    </footer>
    <!--ckeditor-->
    <script>
      CKEDITOR.replace( 'pagebody' );
    </script>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    
  </body>
</html>
