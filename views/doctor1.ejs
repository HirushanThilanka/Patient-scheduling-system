<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Doctor Dashboard</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>

</head>

<body>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
         </button>
        <a class="navbar-brand" href="#">Doctor Dashboard</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/doctor1">Patient List</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="#">Welcome, Doctor</a></li>
          <li><a href="login.html">Logout</a></li>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </nav>


  <header id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>  Doctor <small>Manage Patients</small></h1>
        </div>
        <div class="col-md-2">
          <%=date%>
        </div>
      </div>
    </div>
  </header>

  <section id="breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li class="active">Diabitic Clinic | Patient List</li>
      </ol>
    </div>
  </section>


  <section id="main">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <a href="/doctor1" class="list-group-item active"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Patient List <span class="badge"><%=count[0].pc%></span></a>
          </div>
        </div>


        <div class="col-md-9">

          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title">Patients List</h3>
            </div>
            <div class="panel-body">

              <!-- Content table  -->

              <table class="table table-striped table-hover">
                <tr>
                  <th>Registration Number</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Type</th>
                  <th>Age</th>
                  <th>Gender</th>
                </tr>


                <% for(var i = 0;i < patient.length;i++) { %>

                  <tr>
                    <td>
                      <%= patient[i].reg_no %>
                    </td>
                    <td>
                      <%= patient[i].firstName %>
                    </td>
                    <td>
                      <%= patient[i].lastName %>
                    </td>
                    <td>
                      <%= patient[i].type %>
                    </td>
                    <td>
                      <%= patient[i].age %>
                    </td>
                    <td>
                      <%= patient[i].gender %>
                    </td>


                  </tr>

                  <% } %>

              </table>
            </div>
          </div>

          <br>
          <br>
          <div class="btn-group btn-group-justified">
            <a href="/doctor1/getpatient1/send/<%= patient[0].reg_no %>" class="btn btn-primary">Get</a>
          </div>

        </div>
      </div>
  </section>

  <!-- Bootstrap core JavaScript
   ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</body>

</html>
